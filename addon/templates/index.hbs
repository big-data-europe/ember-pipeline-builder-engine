<div class="container">
  <h1>Workflows</h1>
</div>
<div class="row">
  <div class="col s12">

    <span {{action 'newPipeline'}}>
    {{#md-card class="new-panel" title="Click to add new workflow"}}
      {{#md-card-content}}
	       Workflow description
      {{/md-card-content}}
      {{#md-card-action}}
      	<a class="disabled">Edit</a>
      	<a class="disabled">Export</a>
      	<a class="disabled">Delete</a>
      {{/md-card-action}}
    {{/md-card}}
    </span>

    {{#each model as |pipeline|}}
      {{#md-card}}
        {{#md-card-content}}
          <span class="card-title black-text">
      	    {{inline-edit-model model=pipeline attr='title'}}
      	  </span>
          <div class="row">
            <label>Description</label>
            {{inline-edit-model model=pipeline attr='description' field='textarea'}}
          </div>
          <div class="row">
            <label>Docker Compose File</label>
            {{pipeline.dockerFile.title}}
          </div>
        {{/md-card-content}}
        {{#md-card-action}}
          {{#link-to 'steps' pipeline}}Edit{{/link-to}}
          <a {{action 'export' pipeline}}>Export</a>
          <a {{action 'delete' pipeline}}>Delete</a>
        {{/md-card-action}}
      {{/md-card}}
    {{/each}}

  </div>
</div>
