<h5>Steps</h5>

<div class="row">
  <div class="col s12">
    {{#sortable-group tagName="div" onChange="reorderSteps" as |group|}}
      {{#each sortedSteps as |step|}}
	{{#sortable-item tagName="div" model=step group=group spacing=15}}
	  {{#md-card}}
	    <span class="dragable"><i class="material-icons">swap_vert</i></span>
	    <span class="badge">
	      {{inline-edit-model-check-if-exists model=step attr='code'}}
	    </span>
	    {{#md-card-content}}
	      <span class="card-title black-text">
		{{inline-edit-model model=step attr='title'}}
	      </span>
	      {{inline-edit-model model=step attr='description' field='textarea'}}
	    {{/md-card-content}}
	    {{#md-card-action}}
	      <a {{action 'delete' step}}>Delete</a>
	    {{/md-card-action}}
	  {{/md-card}}
	{{/sortable-item}}
      {{/each}}
    {{/sortable-group}}

    <span {{action 'newStep'}}>
    {{#md-card class="new-panel" title="Click to add new step"}}
      {{md-badge text="step_code"}}
      {{#md-card-content}}
	Step description
      {{/md-card-content}}
      {{#md-card-action}}
	<a class="disabled">Delete</a>
      {{/md-card-action}}
    {{/md-card}}
    </span>

  </div>
</div>

<div class="row">
  {{md-btn text='Back' action='back'}}
</div>
