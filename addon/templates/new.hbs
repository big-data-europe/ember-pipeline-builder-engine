<div class="container">
  <h1>New workflow</h1>
</div>

<div class="row">
  <form class="col s12">
    <div class="row">
      {{md-input value=model.title label='Title' class="col s12"}}
    </div>
    <div class="row">
      {{md-textarea value=model.description label='Description' class="col s12"}}
    </div>
    <div class="row">
      <label>Docker Compose File</label>
      {{docker-compose-search model=model new=true}}
    </div>
    <div class="row">
      {{md-btn text='Next' action='save'}}
      {{md-btn text='Cancel' action='cancel'}}
    </div>
  </form>
</div>
