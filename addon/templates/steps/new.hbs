<h4>Add step</h4>
{{#md-card}}
  {{#md-card-content}}
    <div class="row">
      <div class="col s12">
        <form>
          <div class="row">
            {{md-input value=model.title label='Title' class="col s12 m6"}}
            {{md-input value=model.code label='Code' class="col s12 m6 step-code"}}
            {{md-textarea value=model.description label='Description' class="col s12"}}
          </div>

          {{#if (await services)}}
            <div class="row">
              <h5>Link this step to a service</h5>
              {{#if selectedService}}
                <span>This step will be linked to the service <b>{{selectedService.name}}</b>.</span>
              {{else}}
                You must select a service from this list to link it to the newly created step.
              {{/if}}
              {{#power-select options=(await services) selected=selectedService onchange=(action "setSelectedService" model) as |service|}}
                {{service.name}}
              {{/power-select}}
            </div>
        {{/if}}
        </form>
      </div>
    </div>

  {{/md-card-content}}
  {{#md-card-action}}
    {{md-btn text='Add' action=(action 'save' model selectedService)}}
    {{md-btn text='Cancel' action=(action 'cancel' model)}}
  {{/md-card-action}}
{{/md-card}}
